@page
@using Packt.Shared
@model Northwind.Web.Pages.CustomerOrdersModel
@{
    string title = "Customer Orders";
    ViewData["Title"] = $"Northwind B2B - {title}";
}

<div class="row">
    <h1 class="display-2">@title</h1>
    <div>
        @if (Model.Customer is not null)
        {
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Postal Code</th>
                            <th>Country</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Customer.CompanyName</td>
                            <td>@Model.Customer.Phone</td>
                            <td>@Model.Customer.Address</td>
                            <td>@Model.Customer.City</td>
                            <td>@Model.Customer.PostalCode</td>
                            <td>@Model.Customer.Country</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <table class="table">
                    <thead>
                        <tr><th>Order ID</th><th>Order Date</th></tr>
                    </thead>
                    <tbody>
                        @foreach (Order o in Model.Customer.Orders)
                        {
                            <tr><td>@o.OrderId</td><td>@o.OrderDate</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>